# 长桥API配置模板（请复制此文件为.env并填写真实值，.env不会被Git提交）
LONGPORT_APP_KEY=你的长桥AppKey请填写在这里
LONGPORT_APP_SECRET=你的长桥AppSecret请填写在这里
LONGPORT_ACCESS_TOKEN=你的长桥AccessToken请填写在这里
LONGPORT_WS_URL=wss://openapi.longportapp.com/v1/quote/ws

# 告警配置
FEISHU_WEBHOOK=https://open.feishu.cn/open-apis/bot/v2/hook/xxxxxxxx
DINGTALK_WEBHOOK=https://oapi.dingtalk.com/robot/send?access_token=xxxxxxxx

# 监控配置
# 监控标的，使用逗号分隔
MONITOR_SYMBOLS=AAPL.US,NVDA.US

# 策略阈值
# 价格波动阈值（百分比）
PRICE_CHANGE_THRESHOLD=2.0
# 价差阈值
SPREAD_THRESHOLD=0.05

# 交易配置（可选）
ENABLE_TRADING=false