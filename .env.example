# LongBridge OpenAPI Configuration
LB_APP_KEY=your_app_key_here
LB_APP_SECRET=your_app_secret_here
LB_ACCESS_TOKEN=your_access_token_here

# Alert Webhooks
FEISHU_WEBHOOK=https://open.feishu.cn/open-apis/bot/v2/hook/xxxxxxxx
DINGTALK_WEBHOOK=https://oapi.dingtalk.com/robot/send?access_token=xxxxxxxx

# Monitoring Configuration
# Symbols to monitor, separated by comma (e.g., AAPL.US,NVDA.US,AAPL-20231020-170-C.US)
MONITOR_SYMBOLS=AAPL.US,NVDA.US

# Strategy Thresholds
# Price change threshold percentage (e.g., 2.0 means 2%)
PRICE_CHANGE_THRESHOLD=2.0
# Spread threshold (e.g., 0.05 means 5 cents)
SPREAD_THRESHOLD=0.05

# Trading Configuration (Optional)
# Set to 'true' to enable trading, 'false' to disable
ENABLE_TRADING=false
